@model VirtualGarage.Models.RegisterModel
@using VirtualGarage.HtmlHelpers

@{
    ViewBag.Title = "Регистрация";
    Layout = "~/Views/Shared/Layouts/_Layout.cshtml";
}

<h2>Регистрация</h2>

    <p>
        Используйте следующую форму для создания новой учетной записи. 
    </p>
    <p>
        Длина пароля должна составлять не менее 6 знаков.
    </p>



@using (Html.BeginForm()) {
    @Html.ValidationSummary(true, "Не удалось создать учетную запись. Исправьте ошибки и повторите попытку.")

        <div class="editor-label">
            @Html.EditorFor(model => model.IsCorporativeAccount)
            Подать заявку на создание корпоративного аккаунта
            <div class="editor-field">
            @Html.ValidationMessageFor(model => model.IsCorporativeAccount)
            </div>
            
        </div>    
    
        <div class="editor-label">
            @Html.LabelFor(model => model.UserName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserName)
            @Html.ValidationMessageFor(model => model.UserName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.UserEmail)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserEmail)
            @Html.ValidationMessageFor(model => model.UserEmail)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Password)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ConfirmPassword)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ConfirmPassword)
            @Html.ValidationMessageFor(model => model.ConfirmPassword)
        </div>

        <div class="editor-label">
            @Html.EditorFor(model => model.IsReadRules)
            Я прочитал и обязуюсь выполнять @Html.ActionLink("Правила сайта", "", "")
            <div class="editor-field">
            @Html.ValidationMessageFor(model => model.IsReadRules)
            </div>
            
        </div>
    
        <div>
            <div class="editor-label">Введите слова c картинки</div>
            @Html.Raw(Html.GenerateCaptcha())
            @Html.ValidationMessage("Captcha")
        </div>


        <p>
            <input type="submit" value="Регистрация" class="button" />
        </p>
}

