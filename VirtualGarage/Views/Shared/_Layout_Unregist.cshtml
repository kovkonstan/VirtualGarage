<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
@*    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />*@
    <link rel="icon" href="@Url.Content("~/Content/favicon.ico")" type="image/x-icon" />  
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>

    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/MainStyles.css")" media="screen" />
</head>

<body>
    <div id="wrap">

        <div id="header">
            <div class="headerleft">
                <h1><a href="@Url.Content("~/")">Виртуальный гараж</a></h1>
            </div>
            <div class="headerright">
                @if (Request.IsAuthenticated)
                { 
                    <div id="login_user_info">
                        Здравствуйте, @Context.User.Identity.Name! |
                        @Html.ActionLink("Гараж", "", "Garage")|
                        @Html.ActionLink("Выход", "LogOut", "Account")
                    </div>
                }
                else
                {
                    using (Html.BeginForm()) {
                       
                            <div id="login">
                                @Html.ActionLink("Регистрация", "Register", "Account")
                                <div class="editor-label">
                                    Имя:
                                </div>
                                <div class="editor-field">
                                    @Html.TextBox("Name")
                                </div>
                                <div class="editor-label">
                                    Пароль:
                                </div>
                                <div class="editor-field">
                                    @Html.Password("Password")
                                </div>
                                <div class="editor-label">
                                    @Html.CheckBox("RememberMe")
                                    Запомнить меня
                                </div>
                                <input id="but_login" type="submit" value="Войти" />
                            </div>

                    }
                }
            </div>
        </div>

    <div id="menu">
        <ul>
            <li><a href="#">Автомобили</a></li> 
            <li><a href="#">Пользователи</a></li> 
            <li><a href="#">Поиск</a></li>            
        </ul>
    </div>

    <div id="content">

        <div class="right">

            @RenderBody()
            
        </div>

        <div class="left">
            <h2> Начните пользоваться системой:</h2>
            <h3>1. Зарегистрируйтесь</h3>
            <h3>2. Добавьте свой автомобиль</h3>
            <h3>3. Добавьте событие</h3>
            
            
        </div>

        <div style="clear: both;"> </div>

    </div>

    <div id="footer">
        &copy; Copyright 2011 by <a href="http://inostudio.com/">Inostudio</a></div>

    </div>

</body>
</html>
