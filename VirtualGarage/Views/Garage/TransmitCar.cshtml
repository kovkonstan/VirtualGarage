@{
    ViewBag.Title = "TransmitCar";
    Layout = "~/Views/Shared/_Layout_Garage.cshtml";
}

@section GarageContent
{
<h2>Передать автомобиль</h2>

    <p>Введите E-mail пользователя, которому вы хотите передать ваш автомобиль. 
    Если пользователь с таким E-mail'ом существует, в его гараже будет отображаться 
    ваш автомобиль</p>

    @using (Html.BeginForm())
    {
        <div class="editor-label">E-mail:</div>
        <div class="editor-field">@Html.TextBox("Email")</div>
        
        <input class="button" type="button" value="Передать" />
    }

}